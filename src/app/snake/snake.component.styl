.snake-piece
  position absolute
  background-color green
  z-index 2
  &:first-child
    &[data-direction="right"]
      border-bottom-right-radius 4px
      border-top-right-radius 4px
      &:before
        content ''
        height 1.4px
        width 4px
        display block
        position absolute
        background-color #ab0707
        right -2px
        top 3px
        border 4px
      &:after
        content ':'
        display block
        position absolute
        color white
        font-size 12px
        font-weight 600
        right 4px
        top -8px
    &[data-direction="top"]
      border-top-right-radius 4px
      border-top-left-radius 4px
      &:before
        content ''
        height 1.4px
        width 4px
        display block
        position absolute
        background-color #ab0707
        right 3px
        top 0px
        border 4px
        transform rotate(270deg)
      &:after
        content ':'
        display block
        position absolute
        color white
        font-size 12px
        font-weight 600
        right 6px
        top 0px
        transform rotate(270deg)
    &[data-direction="left"]
      border-bottom-left-radius 4px
      border-top-left-radius 4px
      &:before
        content ''
        height 1.4px
        width 4px
        display block
        position absolute
        background-color #ab0707
        left -2px
        top 4px
        border 4px
        transform rotate(180deg)
      &:after
        content ':'
        display block
        position absolute
        color white
        font-size 12px
        font-weight 600
        left 4px
        top 0px
        transform rotate(180deg)
    &[data-direction="bottom"]
      border-bottom-right-radius 4px
      border-bottom-left-radius 4px
      &:before
        content ''
        height 1.4px
        width 4px
        display block
        position absolute
        background-color #ab0707
        right 2px
        bottom 0px
        transform rotate(90deg)
      &:after
        content ':'
        display block
        position absolute
        color white
        font-size 12px
        font-weight 600
        right -2px
        bottom 0px
        transform rotate(90deg)

.menu
  position absolute
  left 0
  top 0
  opacity 0.7
  background-color #333333
  z-index 2
  ul
    list-style-type none
    width 50%
    height 100%
    padding 0
    margin auto
    text-align center
    display flex
    flex-direction column
    justify-content center
    align-items center
  li
    color white
    width fit-content
    &.try-again
      display flex
      flex-direction column
      align-items center
      cursor pointer
      transition transform 0.5s
      &:hover
        transform scale(1.3)
        color #e2e0e0
        .try-again-icon
          fill #e2e0e0

